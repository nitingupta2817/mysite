{
  "version": 2,
  "builds": [
    {
      "src": "mysite/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "mysite"  // Assuming your static files are built here.
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "mysite/index.html"
    },
    {
      "src": "/about",
      "dest": "mysite/aboutus.html"
    },
    {
      "src": "/contact",
      "dest": "mysite/marksheet.html"
    },
    {
      "src": "(.*)",
      "dest": "mysite/$1"  // Catch-all for other files in the mysite directory.
    }
  ]
}
